<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_font">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    //Base Styles
    <style name="F3" parent="default_font">
        <item name="android:textSize">@dimen/d48</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="F4" parent="default_font">
        <item name="android:textSize">@dimen/d34</item>
        <item name="android:letterSpacing">0.07</item>
    </style>
    <style name="F4_5" parent="default_font">
        <item name="android:textSize">@dimen/d28</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="F4_6" parent="default_font">
        <item name="android:textSize">@dimen/d26</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="F5" parent="default_font">
        <item name="android:textSize">@dimen/d24</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="F6" parent="default_font">
        <item name="android:textSize">@dimen/d20</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    <style name="F_Subtitle1" parent="default_font">
        <item name="android:textSize">@dimen/d16</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    <style name="F_Subtitle2" parent="default_font">
        <item name="android:textSize">@dimen/d14</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    <style name="F_Body" parent="default_font">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    //Fastertable Styles
    <style name="view_title" parent="F4_5">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="title_note" parent="F4_5">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="view_subtitle" parent="F4_6">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="default_text" parent="F_Body">
    <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="list_text" parent="default_text">
        <item name="android:layout_marginTop">@dimen/s12</item>
        <item name="android:textSize">@dimen/d24</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="order_grid" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:width">@dimen/order_grid_cell</item>
        <item name="android:padding">@dimen/grid_cell_padding</item>
    </style>

    <style name="order_grid_small" parent="order_grid">
        <item name="android:width">@dimen/order_grid_cell_small</item>
    </style>

    <style name="order_grid_small_error" parent="order_grid">
        <item name="android:width">@dimen/order_grid_cell_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/secondaryLightColor</item>
    </style>

    <style name="order_header_grid" parent="default_font">
        <item name="android:textSize">@dimen/d20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:width">@dimen/order_grid_cell</item>
        <item name="android:padding">@dimen/grid_cell_padding</item>
    </style>

    <style name="order_header_grid_small" parent="order_header_grid">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:width">@dimen/order_grid_cell_small</item>
    </style>

    <style name="checkout_grid" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:paddingTop">@dimen/s13</item>
        <item name="android:paddingBottom">@dimen/s12</item>
        <item name="android:paddingLeft">@dimen/confirm_cell_padding</item>
        <item name="android:paddingRight">@dimen/confirm_cell_padding</item>
    </style>

    <style name="checkout_grid_header" parent="default_font">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:paddingTop">@dimen/grid_cell_padding</item>
        <item name="android:paddingBottom">@dimen/grid_cell_padding</item>
        <item name="android:paddingLeft">@dimen/confirm_cell_padding</item>
        <item name="android:paddingRight">@dimen/confirm_cell_padding</item>
    </style>

    <style name="edit_hint" parent="default_font">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="edit_text_title" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="default_bold" parent="default_font">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="tab_text" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="item_description" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="menu_line_item" parent="F4_5">
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="payment_line_item" parent="F4_6">
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="approval_line_item" parent="payment_line_item">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="payment_totals" parent="F4_6">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="amount_owed" parent="payment_totals">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
        <item name="android:textColor">@color/errorColor</item>
    </style>

    <style name="modifier_title" parent="subtitle">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <style name="mods_ingredients" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/editText</item>
    </style>

    <style name="primary_button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/d18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="primary_button_large" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>

    <style name="header" parent="default_font">
        <item name="android:textSize">@dimen/d24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header26" parent="default_font">
        <item name="android:textSize">@dimen/d26</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="subtitle" parent="default_font">
        <item name="android:textSize">@dimen/d24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
    </style>

    <style name="subtitle_hint" parent="default_font">
        <item name="android:textSize">@dimen/hint_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
    </style>


    <style name="large_text" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="large_title" parent="default_font">
        <item name="android:textSize">@dimen/d24</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">@dimen/textView_margin</item>
    </style>

    <style name="large_title_bold" parent="large_title">
        <item name="android:textSize">@dimen/d24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="alert_title" parent="large_title_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="alert_text" parent="large_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="alert_button" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="snackBar" parent="default_font">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mimic_text_box" parent="default_font">
        <item name="android:textSize">@dimen/d34</item>
        <item name="android:background">@color/editText</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="error_style" parent="default_font">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:textSize">@dimen/d34</item>
    </style>

    <style name="error_style_small" parent="error_style">
        <item name="android:textSize">@dimen/d26</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="error_style_extra_small" parent="error_style">
        <item name="android:textSize">@dimen/d21</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="bottom_sheet_title" parent="large_title_bold">
        <item name="android:textSize">@dimen/d26</item>
    </style>

    <style name="bottom_sheet_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/d26</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="navigation_drawer" parent="default_font">
        <item name="android:textSize">@dimen/d26</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="CreditCardInputLayoutBoxes"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="InputEditTexts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FirstOrLastNameInput" parent="InputEditTexts">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>