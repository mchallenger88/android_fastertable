<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="ingredients"
            type="com.fastertable.fastertable.data.IngredientList" />

        <variable
            name="clickListener"
            type="com.fastertable.fastertable.data.adapters.IngredientsAdapter.IngredientListener" />
    </data>
    <LinearLayout
        android:id="@+id/layout_ingredient_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_ingredient_title"
            style="@style/modifier_title"
            android:layout_width="580dp"
            android:layout_height="wrap_content"
            android:background="@color/title_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:text="@string/string_ingredients" />
    </LinearLayout>
</layout>
