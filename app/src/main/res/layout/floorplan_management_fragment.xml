<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.fastertable.fastertable.ui.floorplan_manage.FloorplanManageViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_floorplan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/floorplan_fastertoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/fasterToolBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.Fastertable.PopupOverlay"
            tools:ignore="RtlSymmetry">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_floorplan_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_new_floorplan"
                    style="?attr/materialButtonOutlinedStyle"
                    app:rippleColor="@color/ripple_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="110dp"
                    android:text="@string/string_new"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white" />

                <Button
                    android:id="@+id/btn_save_floorplan"
                    style="?attr/materialButtonOutlinedStyle"
                    app:rippleColor="@color/ripple_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_button"
                    app:layout_constraintStart_toEndOf="@+id/btn_new_floorplan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white" />

                <Button
                    android:id="@+id/btn_delete_floorplan"
                    style="?attr/materialButtonOutlinedStyle"
                    app:rippleColor="@color/ripple_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/dialog_delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_button"
                    app:layout_constraintStart_toEndOf="@+id/btn_save_floorplan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white" />

                <Button
                    android:id="@+id/btn_settings_floorplan"
                    style="?attr/materialButtonOutlinedStyle"
                    app:rippleColor="@color/ripple_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/settings"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_button"
                    app:layout_constraintStart_toEndOf="@+id/btn_delete_floorplan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white" />

                <LinearLayout
                    android:id="@+id/layout_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_settings_floorplan"
                    app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                        android:id="@+id/floorplans"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:padding="10dp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/linear_floorplan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/floorplan_fastertoolbar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <GridView
                    android:id="@+id/sidebar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#E1E1E1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#E1E1E1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btn_settings"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_settings" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btn_rotation_left"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_rotate_left" />

                        <ImageButton
                            android:id="@+id/btn_rotation_right"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_rotate_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/btn_top"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_arrow_top" />

                            <ImageButton
                                android:id="@+id/btn_bottom"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_arrow_bottom" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/btn_left"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_arrow_left" />

                            <ImageButton
                                android:id="@+id/btn_right"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:srcCompat="@drawable/ic_arrow_right" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_floorplan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/trashRange"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_trash"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>