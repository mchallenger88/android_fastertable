<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="table"
            type="com.fastertable.fastertable.data.models.RestaurantTable" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/tableImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp"
            >
            <ImageView
                android:id="@+id/img_table"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/restaurant_table"
                app:srcCompat="@drawable/ic_booth" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_table_id"
            style="@style/view_subtitle"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="0dp"
            android:gravity="center|right"
            android:text="10"
            android:textAlignment="center"
            android:textSize="18dp"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>
</layout>
