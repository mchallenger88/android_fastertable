<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="employee"
            type="com.fastertable.fastertable2022.data.models.Employee" />

        <variable
            name="clickListener"
            type="com.fastertable.fastertable2022.adapters.TransferEmployeeListListener" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="@{() -> clickListener.onClick(employee)}">

    <Button
        android:id="@+id/btn_transfer_employee"
        style="@style/text_button_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{employee.fullName()}"
        android:layout_marginStart="20dp"
        app:icon="@drawable/ic_baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>