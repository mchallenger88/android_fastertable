<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.fastertable.fastertable2022.ui.gift.GiftCardViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/gift_fastertoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/fasterToolBar"
        android:paddingStart="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.Fastertable.PopupOverlay"
        tools:ignore="RtlSymmetry">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_gift_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_add_cash"
                style="?attr/materialButtonOutlinedStyle"
                app:rippleColor="@color/ripple_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/add_cash"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                android:onClick="@{() -> viewModel.showGiftScreen(1)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white" />

            <Button
                android:id="@+id/btn_balance_inquiry"
                style="?attr/materialButtonOutlinedStyle"
                app:rippleColor="@color/ripple_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="12dp"
                android:text="@string/balance_inquiry"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                android:onClick="@{() -> viewModel.showGiftScreen(2)}"
                app:layout_constraintStart_toEndOf="@+id/btn_add_cash"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white" />

            <Button
                android:id="@+id/btn_gift_cash"
                style="?attr/materialButtonOutlinedStyle"
                app:rippleColor="@color/ripple_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:text="@string/pay_cash"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                android:onClick="@{() -> viewModel.showGiftScreen(3)}"
                app:layout_constraintEnd_toStartOf="@+id/btn_gift_credit"
                app:layout_constraintTop_toTopOf="@+id/layout_gift_buttons"
                app:strokeColor="@color/white" />

            <Button
                android:id="@+id/btn_gift_credit"
                style="?attr/materialButtonOutlinedStyle"
                app:rippleColor="@color/ripple_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:text="@string/pay_credit"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                android:onClick="@{() -> viewModel.startCredit()}"
                app:layout_constraintEnd_toStartOf="@+id/btn_gift_cancel"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white" />

            <Button
                android:id="@+id/btn_gift_cancel"
                style="?attr/materialButtonOutlinedStyle"
                app:rippleColor="@color/ripple_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/cancel_credit"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                android:onClick="@{() -> viewModel.cancelCredit()}"
                app:layout_constraintEnd_toEndOf="@+id/layout_gift_buttons"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/ticket_card_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        android:paddingStart="24dp"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#E8EAF6"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gift_fastertoolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="RtlSymmetry">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_gift_payment"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="?android:attr/windowBackground"
            android:elevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_gift_header"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_gift_ticket"
                    style="@style/header"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/primary_payment_color"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/ticket_header"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ticketItemsRecycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:scrollbarStyle="outsideInset"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_gift_header"
                app:ticketListData="@{viewModel.activePayment}"
                tools:listitem="@layout/ticket_line_item" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_gift_totals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/txt_paid_in_full"
                    style="@style/error_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paid_in_full"
                    app:layout_constraintBottom_toTopOf="@+id/text_subtotal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/constraint_gift_totals"
                    app:paidInFull="@{viewModel.activePayment}" />


                <TextView
                    android:id="@+id/text_subtotal"
                    style="@style/payment_totals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="115dp"
                    android:text="@string/subtotal"
                    app:layout_constraintBottom_toTopOf="@+id/text_salesTax"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_subtotal_price"
                    style="@style/payment_totals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toTopOf="@+id/text_salesTax"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:ticketSubTotal="@{viewModel.activePayment}" />

                <TextView
                    android:id="@+id/text_tax"
                    style="@style/payment_totals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="115dp"
                    android:text="@string/tax"
                    app:layout_constraintBottom_toTopOf="@+id/text_total"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_salesTax"
                    style="@style/payment_totals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toTopOf="@+id/text_total"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:ticketTax="@{viewModel.activePayment}" />

                <TextView
                    android:id="@+id/text_total"
                    style="@style/payment_totals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="115dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/total"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_total_price"
                    style="@style/payment_totals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:ticketTotal="@{viewModel.activePayment}" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/payment_totals_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/constraint_gift_totals"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/payment_card_view"
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="#E8EAF6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gift_fastertoolbar"
        tools:ignore="ExtraText">

        //Cash Layout
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gift_cash_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_cash_title"
                style="@style/view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/pay_cash"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_amount_owed"
                style="@style/view_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="9dp"
                android:text="@string/amount_owed"
                app:amountOwed="@{viewModel.activePayment}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_cash_title" />

            <TextView
                android:id="@+id/txt_paid_amount"
                style="@style/mimic_text_box"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_amount_owed"
                app:priceDouble="@{viewModel.cashAmount}" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cash_keypad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="65dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_paid_amount">

                <Button
                    android:id="@+id/btn_cash_one"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(1)}"
                    android:text="@string/string_one"
                    android:textSize="@dimen/d24"
                    app:layout_constraintBottom_toTopOf="@+id/btn_cash_four"
                    app:layout_constraintEnd_toStartOf="@+id/btn_cash_two"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_cash_two"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(2)}"
                    android:text="@string/string_two"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_one"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_cash_three"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(3)}"
                    android:text="@string/string_three"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_two"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.widget.Button
                    android:id="@+id/btn_exact_amount"
                    android:layout_width="177dp"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/keypad_button_alt"
                    android:onClick="@{() -> viewModel.exactPayment()}"
                    android:text="@string/string_exact_amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_three"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_cash_four"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(4)}"
                    android:text="@string/string_four"
                    android:textSize="@dimen/d24"
                    app:layout_constraintBottom_toTopOf="@+id/btn_cash_seven"
                    app:layout_constraintEnd_toStartOf="@+id/btn_cash_five"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_one" />

                <Button
                    android:id="@+id/btn_cash_five"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(5)}"
                    android:text="@string/string_five"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_four"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_two" />

                <Button
                    android:id="@+id/btn_cash_six"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(6)}"
                    android:text="@string/string_six"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_five"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_three" />

                <android.widget.Button
                    android:id="@+id/btn_twenty_bucks"
                    android:layout_width="177dp"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button_alt"
                    android:onClick="@{() -> viewModel.roundedPayment(20)}"
                    android:text="@string/twenty_bucks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_six"
                    app:layout_constraintTop_toBottomOf="@id/btn_exact_amount" />

                <Button
                    android:id="@+id/btn_cash_seven"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(7)}"
                    android:text="@string/string_seven"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_four" />

                <Button
                    android:id="@+id/btn_cash_eight"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(8)}"
                    android:text="@string/string_eight"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_seven"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_five" />

                <Button
                    android:id="@+id/btn_cash_nine"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(9)}"
                    android:text="@string/string_nine"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_eight"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_six" />

                <android.widget.Button
                    android:id="@+id/btn_forty_bucks"
                    android:layout_width="177dp"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button_alt"
                    android:onClick="@{() -> viewModel.roundedPayment(40)}"
                    android:text="@string/forty_bucks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_nine"
                    app:layout_constraintTop_toBottomOf="@id/btn_twenty_bucks" />

                <Button
                    android:id="@+id/btn_cash_decimal"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.addDecimal()}"
                    android:text="@string/string_decimal"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_seven" />

                <Button
                    android:id="@+id/btn_cash_zero"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.setCashAmount(0)}"
                    android:text="@string/string_zero"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_decimal"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_eight" />

                <Button
                    android:id="@+id/btn_cash_clear"
                    android:layout_width="@dimen/keypad_button"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.clearPayment()}"
                    android:text="@string/string_clear"
                    android:textSize="@dimen/d20"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_zero"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_nine" />

                <android.widget.Button
                    android:id="@+id/btn_hundred_bucks"
                    android:layout_width="177dp"
                    android:layout_height="@dimen/keypad_button"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button_alt"
                    android:onClick="@{() -> viewModel.roundedPayment(100)}"
                    android:text="@string/hundred_bucks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d24"
                    app:layout_constraintStart_toEndOf="@+id/btn_cash_clear"
                    app:layout_constraintTop_toBottomOf="@id/btn_forty_bucks" />

                <Button
                    android:id="@+id/btn_pay_cash_now"
                    style="@style/primary_button_large"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/keypad_button"
                    android:onClick="@{() -> viewModel.payNow()}"
                    android:text="@string/submit_payment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_cash_zero" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        //Default Add to Gift Card
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gift_add_cash_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/text_gift_card_title"
                style="@style/view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/gift_card"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_gift_card_subtitle"
                style="@style/view_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/add_any_dollar_amount"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_gift_card_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_add_gift_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_gift_card_subtitle">

                <Button
                    android:id="@+id/btn_add_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_5"
                    android:textSize="20sp"
                    android:onClick="@{() -> viewModel.addGiftAmount(5.00)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_add_25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/add_25"
                    android:textSize="20sp"
                    android:onClick="@{() -> viewModel.addGiftAmount(25.00)}"
                    app:layout_constraintStart_toEndOf="@+id/btn_add_5"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_add_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/add_50"
                    android:textSize="20sp"
                    android:onClick="@{() -> viewModel.addGiftAmount(50.00)}"
                    app:layout_constraintStart_toEndOf="@+id/btn_add_25"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_add_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/add_100"
                    android:textSize="20sp"
                    android:onClick="@{() -> viewModel.addGiftAmount(100.00)}"
                    app:layout_constraintStart_toEndOf="@+id/btn_add_50"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_any_amount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="@string/add_other_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_100">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:textSize="@dimen/d21" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_add_any"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/add_amount_entered"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_any_amount" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/gift_card_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_marginBottom="20dp"
                    app:showCreditSpinner="@{viewModel.showSpinner}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_any"/>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gift_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/text_gift_balance_title"
                style="@style/view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/balance_inquiry"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_balance_inquiry_subtitle"
                style="@style/view_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/swipe_the_gift_card"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_gift_balance_title" />

            <Button
                android:id="@+id/btn_start_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/balance_inquiry"
                android:textSize="20sp"
                android:onClick="@{() -> viewModel.balanceInquiry()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_balance_inquiry_subtitle" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/gift_card_spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginBottom="20dp"
                app:showCreditSpinner="@{viewModel.showSpinner}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_start_balance"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gift_swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/text_gift_credit_pay"
                style="@style/view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/gift_card"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_gift_swipe_info"
                style="@style/view_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/swipe_gift_card_info"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_gift_credit_pay" />

            <Button
                android:id="@+id/btn_start_swipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:text="@string/swipe_gift_card"
                android:textSize="20sp"
                android:onClick="@{() -> viewModel.swipeCard()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_gift_swipe_info" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/gift_card_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginBottom="20dp"
                app:showCreditSpinner="@{viewModel.showSpinner}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_start_swipe"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>