<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="aop"
            type="com.fastertable.fastertable.data.models.ApprovalOrderPayment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_closed_approval_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_closed_approval_order_number"
            style="@style/payment_line_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txt_closed_item_quantity"
            style="@style/payment_line_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_closed_approval_order_number"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt_closed_item"
            style="@style/payment_line_item"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@+id/txt_closed_item_quantity"
            app:layout_constraintStart_toEndOf="@+id/txt_closed_item_quantity" />


        <TextView
            android:id="@+id/txt_closed_item_price"
            style="@style/payment_line_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/txt_closed_item_quantity"
            app:layout_constraintStart_toEndOf="@+id/txt_closed_item" />


        <TextView
            android:id="@+id/txt_closed_approval_type"
            style="@style/error_style_extra_small"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_closed_item_quantity"
            app:layout_constraintTop_toBottomOf="@+id/txt_closed_item_price" />

        <View
            android:id="@+id/divider_closed_approval"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_closed_approval_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>