<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.fastertable.fastertable.ui.payment.PaymentViewModel" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payment_fastertoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/fasterToolBar"
        android:paddingStart="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.Fastertable.PopupOverlay"
        tools:ignore="RtlSymmetry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_payment_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_manage_payment"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/manage_payment"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                app:layout_constraintStart_toStartOf="@+id/layout_payment_buttons"
                app:layout_constraintTop_toTopOf="@+id/layout_payment_buttons"
                app:strokeColor="@color/white" />

            <Button
                android:id="@+id/btn_pay_cash"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/pay_cash"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                app:layout_constraintStart_toEndOf="@+id/btn_manage_payment"
                app:layout_constraintTop_toTopOf="@+id/layout_payment_buttons"
                app:strokeColor="@color/white" />

            <Button
                android:id="@+id/btn_pay_credit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/pay_credit"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                app:layout_constraintStart_toEndOf="@+id/btn_pay_cash"
                app:layout_constraintTop_toTopOf="@+id/layout_payment_buttons"
                app:strokeColor="@color/white" />



            <Button
                android:id="@+id/btn_cancel_credit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/cancel_credit"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_button"
                android:onClick="@{() -> viewModel.payNow()}"
                app:layout_constraintEnd_toEndOf="@+id/layout_payment_buttons"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/tickets_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/guest_toolbar"
        android:elevation="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_fastertoolbar">

        <LinearLayout
            android:id="@+id/toolbar_ticketSideBar"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/guest_toolbar"
            android:gravity="fill_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_fastertoolbar"
            app:layout_constraintVertical_bias="0.5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ticket_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ticketsData="@{viewModel.livePayment}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ticket_button"
                />
        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ticket_card_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"
        android:paddingBottom="10dp"
        app:cardBackgroundColor="#E8EAF6"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tickets_scrollView"
        app:layout_constraintTop_toBottomOf="@+id/payment_fastertoolbar"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_order"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:background="#ffffff"
            android:elevation="4dp">


            <TextView
                android:id="@+id/txt_Ticket"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/primary_payment_color"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/ticket_with_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:ticketNumber="@{viewModel.livePayment.tickets}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ticketItemsRecycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:scrollbarStyle="outsideInset"
                app:ticketListData="@{viewModel.livePayment}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_Ticket"
                tools:listitem="@layout/ticket_line_item" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_totals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/text_subtotal"
                    style="@style/menu_line_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="@string/string_subtotal"
                    app:layout_constraintBottom_toTopOf="@+id/text_salesTax"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ticketSubTotal="@{viewModel.livePayment}" />

                <TextView
                    android:id="@+id/text_salesTax"
                    style="@style/menu_line_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="@string/string_saleTax"
                    app:layout_constraintBottom_toTopOf="@+id/text_total"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ticketTax="@{viewModel.livePayment}" />

                <TextView
                    android:id="@+id/text_total"
                    style="@style/menu_line_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/string_total"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ticketTotal="@{viewModel.livePayment}" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>