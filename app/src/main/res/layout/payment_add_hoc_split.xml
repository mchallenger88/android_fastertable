<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.fastertable.fastertable2022.ui.payment.SplitPaymentViewModel" />

        <variable
            name="paymentViewModel"
            type="com.fastertable.fastertable2022.ui.payment.PaymentViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_background"
        tools:ignore="ExtraText">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/payment_adhoc_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/fasterToolBar"
            android:paddingStart="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.Fastertable.PopupOverlay"
            tools:ignore="RtlSymmetry">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_payment_adhoc_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_adhoc_go_payment"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/payment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_button"
                    android:onClick="@{() -> viewModel.goToPayment()}"
                    app:layout_constraintStart_toStartOf="@+id/layout_payment_adhoc_buttons"
                    app:layout_constraintTop_toTopOf="@+id/layout_payment_adhoc_buttons"
                    app:strokeColor="@color/white" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/toolbar_adhoc_ticket_side_bar"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:background="@color/guest_toolbar"
            android:gravity="fill_vertical"
            android:orientation="vertical"
            android:elevation="10dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_adhoc_toolbar"
            app:layout_constraintVertical_bias="0.5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/adhoc_payment_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ticket_button"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/adhoc_ticket_card_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fitsSystemWindows="true"
            android:paddingBottom="10dp"
            app:cardBackgroundColor="#E8EAF6"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolbar_adhoc_ticket_side_bar"
            app:layout_constraintTop_toBottomOf="@+id/payment_adhoc_toolbar"
            app:layout_constraintVertical_bias="0.0">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_adhoc_ticket"
                android:layout_width="450dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:background="?android:attr/windowBackground"
                android:elevation="4dp">


                <TextView
                    android:id="@+id/txt_adhoc_ticket"
                    style="@style/header"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/primary_payment_color"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/ticket_with_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:ticketNumber="@{viewModel.activePayment.tickets}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/adhoc_ticket_recycler"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="16dp"
                    android:scrollbarStyle="outsideInset"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_adhoc_ticket"
                    tools:listitem="@layout/ticket_line_item" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_adhoc_totals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    tools:layout_editor_absoluteX="0dp">


                    <TextView
                        android:id="@+id/text_adhoc_subtotal1"
                        style="@style/payment_totals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="115dp"
                        android:text="@string/subtotal"
                        app:layout_constraintBottom_toTopOf="@+id/text_adhoc_salesTax1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_adhoc_subtotal_price1"
                        style="@style/payment_totals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_adhoc_salesTax1"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ticketSubTotal="@{viewModel.activePayment}" />

                    <TextView
                        android:id="@+id/text_adhoc_tax1"
                        style="@style/payment_totals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="115dp"
                        android:text="@string/tax"
                        app:layout_constraintBottom_toTopOf="@+id/text_adhoc_total1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_adhoc_salesTax1"
                        style="@style/payment_totals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_adhoc_total1"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ticketTax="@{viewModel.activePayment}" />

                    <TextView
                        android:id="@+id/text_adhoc_total1"
                        style="@style/payment_totals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="115dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/total"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/text_adhoc_total_price1"
                        style="@style/payment_totals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ticketTotal="@{viewModel.activePayment}" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/adhoc_totals_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintBottom_toTopOf="@+id/constraint_adhoc_totals"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        //Card View
        <androidx.cardview.widget.CardView
            android:id="@+id/payment_card_view"
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            app:cardBackgroundColor="#E8EAF6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_adhoc_toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_adhoc_title"
                    style="@style/view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/move_ticket_items"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_adhoc_instructions"
                    style="@style/alert_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="50dp"
                    android:text="@string/move_item_instructions"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_adhoc_title" />

                <Button
                    android:id="@+id/btn_adhoc_save_item_changes"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/save"
                    android:textSize="20sp"
                    android:onClick="@{() -> viewModel.saveItemMoveChanges()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_adhoc_instructions" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>