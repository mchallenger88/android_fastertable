<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title"
        style="@style/alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/order_item_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_modify_item"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_outline_change_circle_24"
        android:text="@string/modify_order_item"
        android:textAlignment="textStart"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/toolbar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title"
        app:strokeColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btn_item_rush"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_rush"
        android:text="@string/rush"
        android:textAlignment="textStart"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/toolbar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_modify_item"
        app:strokeColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btn_item_takeout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_takeout"
        android:text="@string/dialog_Takeout"
        android:textAlignment="textStart"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/toolbar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_item_rush"
        app:strokeColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btn_item_no_make"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_nomake"
        android:text="@string/dialog_NoMake"
        android:textAlignment="textStart"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/toolbar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_item_takeout"
        app:strokeColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btn_item_delete"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_trash"
        android:text="@string/dialog_delete"
        android:textAlignment="textStart"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/toolbar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_item_no_make"
        app:strokeColor="@color/white"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btn_item_close"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
        android:text="@string/dialog_close"
        android:textAlignment="textStart"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/toolbar_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_item_delete"
        app:strokeColor="@color/white"
        tools:ignore="RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>